      script(src='https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js')
  body
    // 导航栏
    nav#navbar.navbar
      .nav-content
        #nav-header
          a(href='/') Levin
        #menu-button
          span
          span
          span
        .clearfix
        ul#menu-list
          li
            a(href='/') 首页
          li
            a(href='/blog') 日志
          li
            a(href='/project') 项目简介
          li.active
            a(href='/photo') 相册
          li
            a(href='/about') 关于
    // 导航栏 end
    // == photography section start ==
    section.photography-section
      .photography-title
        h2 Funny Photo
        .photography-menu
          a(href='/photo') 首页
          a(href='/photo/archive') 归档
      .photography_list
        p.list_header
          span.list_item_circle
          | 嗯...!目前共计
          span #{photoCounts}
          | 篇日志。继续努力
        for photo in photos
          .list_item
            span.list_item_circle
            span.list_item_date.photo_date #{photo.photoDate}
            span.list_item_title
              a(href="/photo/" + photo.photoId, target='_blank') #{photo.photoTitle}
            span.list_item_tag #{photo.photoTag}
    // == photography section end ==
    // == footer content ==
