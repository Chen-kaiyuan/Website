    meta(name='keywords', content='html5,响应式,作品展示,个人作品展示,作品展示网站,levinhax')
    meta(name='description', content='作品展示,个人作品展示,作品展示网站,levinhax,作品,网站,JavaScript,react,node,python,前端工程师')
    title 相册
    link(rel='stylesheet', type='text/css', href='/stylesheets/reset.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/base.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/photo.css')
